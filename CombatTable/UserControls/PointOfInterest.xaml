<UserControl x:Class="CombatTable.UserControls.PointOfInterest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrl="clr-namespace:CombatTable.UserControls"
             mc:Ignorable="d" 
             Width="{Binding Path=CellSize, RelativeSource={RelativeSource AncestorType={x:Type ctrl:Map}}}"
             Height="{Binding Path=CellSize, RelativeSource={RelativeSource AncestorType={x:Type ctrl:Map}}}"
             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBlock Text=" ! " Cursor="Help"  FontWeight="Bold" FontSize="20" ToolTip="{Binding Notes}" Foreground="Red">
    </TextBlock>
</UserControl>
