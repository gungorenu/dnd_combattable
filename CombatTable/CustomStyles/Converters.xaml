<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:CombatTable.Converters"
                    xmlns:local="clr-namespace:CombatTable.CustomStyles">

    <conv:StringFormat x:Key="StringFormat"/>
    <conv:IntegerValueConverter x:Key="IntValue"/>
    <conv:BooleanValueConverter x:Key="BoolValue"/>
    <conv:NotConverter x:Key="Not"/>
    <conv:Bool2VisibilityConverter x:Key="Bool2Vis"/>
    <conv:ColumnSpanConverter x:Key="ColSpan"/>
    <conv:TypeCheckConverter x:Key="TypeCheck"/>
    <conv:ValueConverter x:Key="ValueConv"/>
    <conv:ColorChoser TrueCase="Green" FalseCase="Red" x:Key="PlayerNameColorChooser"/>
    <conv:ColorChoser TrueCase="Yellow" FalseCase="Gray" x:Key="PlayerFocusColorChooser"/>
    <conv:ColorChoser TrueCase="Black" FalseCase="Transparent" x:Key="WallColorChooser"/>
    <conv:ColorChoser TrueCase="Orange" FalseCase="Transparent" x:Key="DoorColorChoser"/>
    <conv:NotNullConverter x:Key="NotNull"/>
    <conv:GenericNodeContainerTextConverter x:Key="GenericNodeContainerTextConv"/>
    <conv:MaxWidthConverter x:Key="MaxWidthConv"/>
    <conv:AreEqualConverter x:Key="AreEqualConv" />

</ResourceDictionary>